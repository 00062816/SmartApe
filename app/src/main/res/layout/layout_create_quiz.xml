<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">

    <TextView
        android:id="@+id/textView_createQuiz_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/text_create_your_own_quiz"
        android:textColor="@color/colorTextOnAccent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout_createQuiz_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_createQuiz_title"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_createQuiz_quizName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_edit_text"
            android:hint="@string/text_quiz_title"
            android:inputType="text"
            android:lines="1"
            android:maxLength="40"
            android:maxLines="1"
            android:padding="6dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_category"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner_createQuiz_quizCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:entries="@array/quiz_category_options" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_description"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_createQuiz_quizDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/shape_edit_text"
            android:fitsSystemWindows="true"
            android:gravity="start"
            android:hint="@string/text_quiz_description"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLength="180"
            android:maxLines="5"
            android:padding="6dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_time_limit"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText_createQuiz_quizLimitTimeHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edit_text"
                android:hint="@string/text_00"
                android:inputType="number"
                android:maxLength="2"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_colon"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText_createQuiz_quizLimitTimeMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edit_text"
                android:hint="@string/text_00"
                android:inputType="number"
                android:maxLength="2"
                android:padding="8dp"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_button"
        android:text="@string/text_next" />

</RelativeLayout>